file = {:Users/mauriciomardones/Library/Application Support/Mendeley Desktop/Downloaded/Melbourne-Thomas et al. - 2021 - Poleward bound adapting to climate-driven species redistribution.pdf:pdf},
isbn = {0123456789},
issn = {15735184},
journal = {Reviews in Fish Biology and Fisheries},
keywords = {Climate change,Future seas,Indigenous knowledge,Interdisciplinary,Range shifts,Species redistribution},
mendeley-groups = {DOCAS,DOCAS/Ensayo{\_}CC,DOCAS/Proyecto{\_}Tesis{\_}DOCAS},
