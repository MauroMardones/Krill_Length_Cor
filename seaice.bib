issn = {21678359},
journal = {PeerJ},
keywords = {Bipolar,Bryophyte,Diaspore,Ectozoochory,Endozoochory,Long-distance dispersal,Shorebirds,Sporic,Transequatorial},
mendeley-groups = {DOCAS/Exa{\_}Eco,DOCAS/Proyecto{\_}Tesis{\_}DOCAS},
