journal = {Frontiers in Marine Science},
keywords = {Antarctic krill, flux, transport, biomass, Signatu,acoustic doppler,adcp,antarctic krill,biomass,current profiler,flux,frontiers in marine science,frontiersin,org,signature100,transport,wideband echosounder,www},
