journal = {Marine Ecology Progress Series},
keywords = {Antarctic Peninsula,Circulation,Circum - polar Deep Water,Connectivity,Euphausia superba,Lagrangian particles},
mendeley-groups = {DOCAS/Proyecto{\_}Tesis{\_}DOCAS},
