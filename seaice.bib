issn = {20511434},
journal = {Conservation Physiology},
keywords = {Climate change,distribution,fisheries,metabolic index,oxygen,temperature},
mendeley-groups = {DOCAS/Ensayo{\_}CC,DOCAS/Proyecto{\_}Tesis{\_}DOCAS},
number = {1},
title = {{Different drivers, common mechanism; the distribution of a reef fish is restricted by local-scale oxygen and temperature constraints on aerobic metabolism}},
