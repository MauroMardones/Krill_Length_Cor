keywords = {Ecological biogeography,Global warming,Review,Temperate versus tropical},
mendeley-groups = {DOCAS/Exa{\_}Eco,DOCAS/Proyecto{\_}Tesis{\_}DOCAS},
number = {1},
pages = {102--112},
title = {{Ecological biogeography: A review with emphasis on conservation and the neutral model}},
volume = {72},
year = {2008}
}
@article{Moffat2018,
