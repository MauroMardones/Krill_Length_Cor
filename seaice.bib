file = {:Users/mauriciomardones/Library/Application Support/Mendeley Desktop/Downloaded/Merino et al. - 2019 - Adaptation of North Atlantic Albacore Fishery to Climate Change Yet Another Potential Benefit of Harvest Control.pdf:pdf},
issn = {22967745},
journal = {Frontiers in Marine Science},
keywords = {North Atlantic albacore,adaptability,climate change,harvest control rule,management strategy evaluation},
mendeley-groups = {DOCAS,DOCAS/Ensayo{\_}CC,DOCAS/Proyecto{\_}Tesis{\_}DOCAS},
number = {October},
pages = {1--14},
title = {{Adaptation of North Atlantic Albacore Fishery to Climate Change: Yet Another Potential Benefit of Harvest Control Rules}},
